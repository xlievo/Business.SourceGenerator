      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Business.SourceGenerator\Business.SourceGenerator.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Code.cs">
